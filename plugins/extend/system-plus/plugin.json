{
    "$schema": "../../../system/schema/extend.json",
    "name": "System Plus",
    "description": "Improves the user interface and adds new options for extend plugins.",
    "version": "0.9.2",
    "environment": {
        "system": "^8.0"
    },
    "authors": [
        {"name": "Friends of Sunlight CMS", "url": "https://github.com/friends-of-sunlight-cms/"}
    ],
    "class": "SystemPlusPlugin",
    "config_defaults": {
        "service_buttons": true
    },
    "actions": {
        "config": "ConfigAction"
    },
    "langs": {
        "systemplus": "lang"
    },
    "events": [],
    "events.web": [],
    "events.admin": [
        {"event": "admin.page.editscript", "method": "onPageEditScript", "priority": 99999},
        {"event": "admin.mod.init", "method": "onModInit"},
        {"event": "admin.head", "method": "onHead", "group": "system-plus"},
        {"event": "admin.style", "method": "onAdminStyle"}
    ]
}
